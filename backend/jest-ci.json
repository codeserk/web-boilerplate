{

  "moduleFileExtensions": ["js", "json", "ts"],
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "reporters": ["default", "jest-junit"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".(e2e-)?spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "coverage"
}
